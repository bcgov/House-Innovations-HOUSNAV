{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false,
      "dependsOn": ["^format"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"]
    },
    "e2e": {
      "dependsOn": ["^e2e"]
    },
    "e2e:chrome": {
      "dependsOn": ["^e2e:chrome"]
    },
    "e2e:firefox": {
      "dependsOn": ["^e2e:firefox"]
    },
    "e2e:open": {
      "dependsOn": ["^e2e:open"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

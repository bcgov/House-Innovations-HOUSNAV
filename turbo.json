{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_ENVIRONMENT",
        "NEXT_PUBLIC_SHOW_LOG_STATE_BUTTON",
        "NEXT_PUBLIC_SHOW_QUESTION_LABELS",
        "NEXT_PUBLIC_SHOW_FEEDBACK_FORM_2",
        "NEXT_PUBLIC_SHOW_FEEDBACK_FORM_4"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NEXT_PUBLIC_ENVIRONMENT",
        "NEXT_PUBLIC_SHOW_LOG_STATE_BUTTON",
        "NEXT_PUBLIC_SHOW_QUESTION_LABELS",
        "NEXT_PUBLIC_SHOW_FEEDBACK_FORM_2",
        "NEXT_PUBLIC_SHOW_FEEDBACK_FORM_4"
      ]
    },
    "format": {
      "cache": false,
      "dependsOn": ["^format"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"]
    },
    "e2e": {
      "dependsOn": ["^e2e"]
    },
    "e2e:chrome": {
      "dependsOn": ["^e2e:chrome"]
    },
    "e2e:firefox": {
      "dependsOn": ["^e2e:firefox"]
    },
    "e2e:open": {
      "dependsOn": ["^e2e:open"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
